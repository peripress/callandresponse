---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
import '../styles/global.css';
---

<header>
	<nav>
		<h1>{SITE_TITLE}</h1>
		<div class="HeaderLinkContainer">
			<a class="headerlink tinyPoppins" href="./">I: Call and Response</a>
		</div>
	</nav>
</header>
<style>
	header {
		background: #000;
		font-size: 13px;
		height: 24px;
		margin: 0 0;
		padding: 8px 0;
		position: fixed;
		text-align: left;
		top: 0;
		left: 0;
		right: 0;
		z-index: 3000;
	}
	nav h1 {
		color: rgba(255,255,255,.7);
		display: inline;
		margin: 2px 24px;
		font-size: 14px;
		font-weight: 300;
	}
	div.HeaderLinkContainer {
		position: fixed;
		margin: 0 auto;
		top: 9px;
		left: 0;
		right: 0;
		text-align: center;
	}
	.headerlink {
		color: #ff634f;
		display: inline-block;
		margin: 0 auto;
		text-decoration: none;
	}

	@media screen and (max-width: 480px) {
		header {
			height: 50px;
			padding: 10px;
			text-align: center;
		}
		nav h1 {
			display: inline-block;
			margin: 0 auto;
			text-align: center;
		}
		div.HeaderLinkContainer {
			margin: 0;
			top: 36px;
		}
	}
</style>
