---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

// Use Astro.glob() to fetch all posts, and then sort them by date.
const posts = (await Astro.glob('./callandresponse/*.{md,mdx}')).sort(
	(a, b) => {return a.frontmatter.order-b.frontmatter.order} 
);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
			ul li {
				display: flex;
			}
			ul li time {
				flex: 0 0 130px;
				font-style: italic;
				color: #595959;
			}
			ul li a:visited {
				color: #8e32dc;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<p>[a pgh about the project, process, vision...]</p>

				<ul>
					{posts.map((post) => (
						<li><a href={post.url}>{post.frontmatter.callauthor} and {post.frontmatter.responseauthor} </a></li>
					))}
				</ul>

			</section>
		</main>
		<Footer />
	</body>
</html>
